<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset Password</title>
    <link rel="stylesheet" href="/resetpass.css" />
  </head>
  <body>
    <div class="maindiv">
      <h1>Change Password</h1>
      <div class="card">
        <div class="container">
          <form action="/passconf" method="post">
            <div class="formdiv">
              <input
                type="text"
                name="email"
                value="{{this.flightData.email}}"
                hidden
              />
              <input type="password" name="newp" placeholder="New Password" />
              <input
                type="password"
                name="conp"
                placeholder="Confirm Password"
              />
              <button type="submit" style="margin-top: 25px;">change</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>