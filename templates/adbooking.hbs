<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Bookings</title>
    <link
      rel="stylesheet"
      href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css"
    />
    <script
      type="text/javascript"
      src="https://code.jquery.com/jquery-1.12.3.min.js"
    ></script>
    <script
      type="text/javascript"
      src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"
    ></script>
    <script type="text/javascript">
      $(document).ready(function(){ $("#mytable").DataTable(); })
    </script>
    <link rel="stylesheet" href="/adbookingstyle.css" />
  </head>
  <body>
    <div id="header" style="width:100%;margin-top:10px">
      <h1 style="margin-left: 10px;">Ticket Booking System</h1>
      <div style="display: flex; flex-direction:row; align-items:baseline">
        <a
          href="./adhome"
          style="text-decoration:none;margin-right:20px;color:#213555; border-radius:45%"
        ><h1>All Flights</h1></a>
        <form action="/logout" method="get" style="margin-right: 20px;">
          <button type="submit">logout</button>
        </form>
      </div>
    </div>
    <h1 style="margin-right:10px;color:#213555">All Bookings</h1>
    <table id="mytable" class="display" border="1" style="width: 100%;">
      <thead>
        <th>Flight Name</th>
        <th>Flight Id</th>
        <th>User Name</th>
        <th>Date</th>
        <th>Time</th>
        <th>No of Tickets</th>
        <th>Cancel</th>
      </thead>
      <tbody>
        {{#each this.bookingData as |bookingData index|}}
          <tr>
            <td>{{this.flight}}</td>
            <td>{{this.flight_id}}</td>
            <td>{{this.passenger}}</td>
            <td>{{this.date}}</td>
            <td>{{this.time}}</td>
            <td>{{this.ticketcount}}</td>
            <td><form action="/adcanconf" method="post">
                <input
                  type="text"
                  name="number"
                  hidden
                  value="{{this.flight_id}}"
                />
                <input
                  type="text"
                  name="passenger"
                  hidden
                  value="{{this.passenger}}"
                />
                <input
                  type="text"
                  name="count"
                  hidden
                  value="{{this.ticketcount}}"
                />
                <button type="submit">cancel</button>
              </form></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </body>
</html>