<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Home</title>
    <link
      rel="stylesheet"
      href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css"
    />
    <script
      type="text/javascript"
      src="https://code.jquery.com/jquery-1.12.3.min.js"
    ></script>
    <script
      type="text/javascript"
      src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"
    ></script>
    <script type="text/javascript">
      $(document).ready(function(){ $("#mytable").DataTable(); })
    </script>
    <style>
      body{ margin: 0; padding: 0;  font-family: 'Jost', sans-serif;
      background: linear-gradient(to bottom, wheat, rgb(225, 177, 90), rgb(232,
      165, 42)); } #header{ display: flex;
      flex-direction:row; justify-content:space-between;background-color:
      rgba(178, 56, 56, 0.82); color: wheat; }
    </style>
  </head>
  <body>
    <div id="header" style="width:100%">
      <h1 style="margin-left: 10px;">Ticket Booking System</h1>
      <div style="display: flex; flex-direction:row; align-items:baseline">
        <a
          href="./adbooking"
          style="text-decoration:none;margin-right:20px;color:wheat"
        ><h1>All Bookings</h1></a>
        <form action="/logout" method="get" style="margin-right: 20px;">
          <input type="submit" value="logout" />
        </form>
      </div>
    </div>
    <h1>All Flights</h1>
    <table border="1" style="width: 100%;" id="mytable" class="display">
      <thead>
        <th>Name</th>
        <th>Number</th>
        <th>Date</th>
        <th>Departure</th>
        <th>Destination</th>
        <th>Seats</th>
        <th>Time</th>
        <th>Remove</th>
      </thead>
      <tbody>
        {{#each this.flightData as |flightData index|}}
          <tr>
            <td>{{this.name}}</td>
            <td>{{this.number}}</td>
            <td>{{this.date}}</td>
            <td>{{this.from}}</td>
            <td>{{this.to}}</td>
            <td>{{this.seats}}</td>
            <td>{{this.time}}</td>
            <td><form action="/delFlight" method="post">
                <input
                  type="text"
                  name="flinum"
                  hidden
                  value="{{this.number}}"
                />
                <input type="submit" value="remove" />
              </form></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <form action="/modFlight" method="get">
      <input type="submit" value="add/update" />
    </form>
  </body>
</html>