<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cancel Tickets</title>
    <link rel="stylesheet" href="/canconfstyle.css" />
    <style>body { margin: 0; padding: 0; font-family: "Jost", sans-serif; /*
      background: #f5efe7; */ background-color: #ffdee9; background-image:
      linear-gradient(0deg, #ffdee9 0%, #b5fffc 100%); color: #213555; } .card {
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2); transition: 0.3s; width: 40%;
      /* background-color: #d8c4b6; */ /* background-image: linear-gradient(to
      right, #74ebd5 0%, #9face6 100%); */ background-image: linear-gradient( to
      top, #d5d4d0 0%, #d5d4d0 1%, #eeeeec 31%, #efeeec 75%, #e9e9e7 100% ); }
      .card:hover { box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2); } .container {
      padding: 2px 16px; } img { box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
      width: 100%; height: 280px; } button { justify-content: center;
      background: #4f709c; color: #f5efe7; font-size: 1em; font-weight: bold;
      height: 35px; outline: none; width: 80px; border: none; border-radius:
      5px; transition: 0.2s ease-in; cursor: pointer; } button:hover {
      background: #d8c4b6; color: #4f709c; } .maindiv { display: flex;
      flex-direction: column; align-items: center; margin-top: 20px; height:
      100vh; } input { font: inherit; padding: 0.2em 0.5em; } .formdiv { width:
      40%; } input { margin-bottom: 10px; font: inherit; padding: 0.2em 0.5em;
      width: 120px; } em { margin-top: 15px; }
    </style>
  </head>
  <body>

    <div class="maindiv">
      <div
        class="card"
        style="display: flex; flex-direction:row;align-items:center"
      >
        <div class="container">
          <em><h1>{{this.flightData.flight}}</h1></em>
          <em>From:
            <span
              style="font-weight: bold;"
            >{{this.flightData.departure}}</span></em><br />
          <em>To:
            <span
              style="font-weight: bold;"
            >{{this.flightData.arrival}}</span></em><br />
          <em>Date:
            <span
              style="font-weight: bold;"
            >{{this.flightData.date}}</span></em><br />
          <em>Time:
            <span
              style="font-weight: bold;"
            >{{this.flightData.time}}</span></em><br />
          <em>Tickets:
            <span
              style="font-weight: bold;"
            >{{this.flightData.ticketcount}}</span></em><br />
        </div>
        <div class="img-container">
          <img
            src="https://media.istockphoto.com/id/155380716/photo/commercial-jet-flying-over-clouds.jpg?s=612x612&w=0&k=20&c=idhnJ7ZdrLA1Dv5GO2R28A8WCx1SXCFVLu5_2cfdvXw="
            {{! src="https://www.cheapflyfares.us/media/images/right-md.gif" }}
            alt="img1"
          />
        </div>
      </div>
      <div class="formdiv">

        <h1>Cancel the tickets!!</h1>
        <form id="form_com" class="tick-form" action="/cancel" method="post">
          <input
            type="text"
            name="number"
            value={{this.flightData.flight_id}}
            hidden
            id="number"
          />
          <input
            type="text"
            name="nooftick"
            value={{this.flightData.ticketcount}}
            hidden
            id="nooftick"
          />
          <div style="margin-bottom: 10px;"><label for="noofcan">No of tickets
              to cancel:</label><input
              type="text"
              name="noofcan"
              style="margin-left: 10px;"
            /></div>
          {{! <div style="margin-bottom: 10px;"></div> }}
          <div style="margin-bottom: 10px;"><label for="no-of-tick">If you want
              to cancel,type
              <strong>CANCEL</strong>
              in the text box.</label></div>
          <div style="margin-bottom: 10px;"><input
              type="text"
              name="cantext"
              placeholder=""
            /></div>

          <button type="submit">confirm</button>
        </form>

      </div>
    </div>
  </body>
</html>