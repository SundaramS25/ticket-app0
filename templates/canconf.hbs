<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Booking Tickets</title>
    <link rel="stylesheet" href="/paymentstyle.css">
  </head>
  <body>
    <h1>Book the Tickets</h1>
    <div style="display: flex; flex-direction:row;">
      <div
        class="card"
        style="display: flex; flex-direction:row;align-items:center"
      >
        <div class="container">
          <em><h1>{{this.flightData.flight}}</h1></em>x
          <em>From:
            <span
              style="font-weight: bold;"
            >{{this.flightData.departure}}</span></em><br />
          <em>To:
            <span
              style="font-weight: bold;"
            >{{this.flightData.arrival}}</span></em><br />
          <em>Date:
            <span
              style="font-weight: bold;"
            >{{this.flightData.date}}</span></em><br />
          <em>Time:
            <span
              style="font-weight: bold;"
            >{{this.flightData.time}}</span></em><br />
          <em>Tickets:
            <span
              style="font-weight: bold;"
            >{{this.flightData.nooftick}}</span></em><br />
        </div>
        <div class="img-container">
          <img
            src="https://media.istockphoto.com/id/155380716/photo/commercial-jet-flying-over-clouds.jpg?s=612x612&w=0&k=20&c=idhnJ7ZdrLA1Dv5GO2R28A8WCx1SXCFVLu5_2cfdvXw="
            alt="img"
          />
        </div>
      </div>
      <div style="margin-left:20px">

        <h1>Cancel the tickets!!</h1>
        <form
          id="form_com"
          class="tick-form"
          action="/cancel"
          method="post"
        >
          <input
            type="text"
            name="number"
            value={{this.flightData.number}}
            hidden
            id="number"
          />
          <input
            type="text"
            name="nooftick"
            value={{this.flightData.nooftick}}
            hidden
            id="nooftick"
          />
          <label for="no-of-tick">Amount for
            {{this.flightData.nooftick}}
            is
            {{this.flightData.amount}}</label>
          <br />
          <input type="text" name="accno" placeholder="enter bank acc no" />
          <br />
          <button type="submit">pay</button>
        </form>

      </div>
    </div>
  </body>
</html>