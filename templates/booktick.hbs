<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Booking Tickets</title>
    <style>
      .card{ box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2); transition: 0.3s;
      width:40%; } .card:hover { box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2); }
      .container { padding: 2px 16px; } img{ box-shadow: 0 4px 8px 0
      rgba(0,0,0,0.2);width: 100%; height: 280px;}
    </style>
  </head>
  <body>
    <h1>Book the Tickets</h1>
    <div style="display: flex; flex-direction:row;">
      <div
        class="card"
        style="display: flex; flex-direction:row;align-items:center"
      >
        <div class="container">
          <em><h1>{{this.flightData.name}}</h1></em>
          <em>From:
            <span
              style="font-weight: bold;"
            >{{this.flightData.from}}</span></em><br />
          <em>To:
            <span
              style="font-weight: bold;"
            >{{this.flightData.to}}</span></em><br />
          <em>Date:
            <span
              style="font-weight: bold;"
            >{{this.flightData.date}}</span></em><br />
          <em>Time:
            <span
              style="font-weight: bold;"
            >{{this.flightData.time}}</span></em><br />
          <em>Available seats:
            <span
              style="font-weight: bold;"
            >{{this.flightData.seats}}</span></em><br />
        </div>
        <div class="img-container">
          <img
            src="https://media.istockphoto.com/id/155380716/photo/commercial-jet-flying-over-clouds.jpg?s=612x612&w=0&k=20&c=idhnJ7ZdrLA1Dv5GO2R28A8WCx1SXCFVLu5_2cfdvXw="
            alt="img"
          />
        </div>
      </div>
      <div style="margin-left:20px">

        <h1>Book Now!!</h1>
        <form
          id="form_com"
          class="tick-form"
          action="/bookTickets"
          method="post"
        >
          <input
            type="text"
            name="name"
            value={{this.flightData.name}}
            hidden
            id="name"
          />
          <input
            type="text"
            name="number"
            value={{this.flightData.number}}
            hidden
            id="number"
          />
          <input
            type="text"
            name="from"
            value={{this.flightData.from}}
            hidden
            id="from"
          />
          <input
            type="text"
            name="to"
            hidden
            id="to"
            value={{this.flightData.to}}
          />
          <input
            type="text"
            name="date"
            hidden
            id="date"
            value={{this.flightData.date}}
          />
          <input
            type="text"
            name="time"
            value={{this.flightData.time}}
            hidden
            id="time"
          />
          <input
            type="text"
            name="seats"
            value={{this.flightData.seats}}
            hidden
            id="seats"
          />
          <label for="no-of-tick">No of Tickets:</label>
          <input type="text" name="nooftick" placeholder="No of tickets" />
          <br />
          <input type="submit" value="book" />
        </form>

      </div>
    </div>
    <form action="">

    </form>
  </body>
</html>