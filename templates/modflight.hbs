<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Modify Flight</title>
    <style>
      body{ margin: 0; padding: 0; font-family: 'Jost', sans-serif; background:
      linear-gradient(to bottom, wheat, rgb(225, 177, 90), rgb(232, 165, 42));
      display: flex; justify-content: center;align-items: center; margin-top:
      120px;flex-direction: column;} button{ justify-content: center; color:
      rgb(163, 51, 4); background: rgb(255, 255, 255); font-size: 1em;
      font-weight: bold;height: 35px; outline: none; border: none;
      border-radius: 5px; transition: .2s ease-in; cursor: pointer;margin-left:
      75px} button:hover{ background: rgb(220, 217, 213); color: rgb(163, 51,
      4)}.card { display: flex;flex-direction: column; justify-content: center;
      align-items: center; align-content: center; background-color: rgb(248,
      178, 48);box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2); transition: 0.3s; width:
      40%; border-radius: 10px; height: 60%;} .card:hover { box-shadow: 0 8px
      16px 0 rgba(0,0,0,0.2); } .head{ color:white; } form > input{
      margin-bottom: 10px; } label{color: rgb(163, 51, 4); font-weight:600;}
    </style>
  </head>
  <body>

    <div class="card">
      <h1 style="color: white;">Add / Update Flights</h1>
      <form action="/modFlight" method="post">
        <label for="name">Name:</label>
        <input
          type="text"
          name="name"
          placeholder="Name of the flight"
          id="name"
        />
        <br />
        <label for="number">Number:</label>
        <input
          type="text"
          name="number"
          placeholder="Number of the flight"
          id="number"
        />
        <br />
        <label for="from">Departure:</label>
        <input type="text" name="from" placeholder="From" id="from" />
        <br />
        <label for="to">Destination:</label>
        <input type="text" name="to" placeholder="To" id="to" />
        <br />
        <label for="date">Date:</label>
        <input type="date" name="date" placeholder="dd-mm-yyyy" id="date" />
        <br />
        <label for="time">Time:</label>
        <input type="time" name="time" placeholder="" id="time" />
        <br />
        <label for="seats">Seats available:</label>
        <input
          type="text"
          name="seats"
          placeholder="Enter no of seats"
          id="seats"
        />
        <br />
        <button type="submit">add/update</button>
      </form>
    </div>
  </body>
</html>