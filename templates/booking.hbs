<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Bookings</title>
    <link
      rel="stylesheet"
      href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css"
    />
    <script
      type="text/javascript"
      src="https://code.jquery.com/jquery-1.12.3.min.js"
    ></script>
    <script
      type="text/javascript"
      src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"
    ></script>
    <script type="text/javascript">
      $(document).ready(function(){ $("#mytable").DataTable(); })
    </script>
    <style>
      body{ background-color: wheat; } #header{ display: flex;
      flex-direction:row; justify-content:space-between;background-color:
      rgba(178, 56, 56, 0.82); color: wheat; }
    </style>
  </head>
  <body>
    <div id="header" style="width:100%">
      <h1 style="margin-left: 10px;">Ticket Booking System</h1>
      <div style="display: flex; flex-direction:row; align-items:baseline">
        <a
          href="./allFlights"
          style="text-decoration:none;margin-right:20px;color:wheat"
        ><h1>All Flights</h1></a>
        <form action="/logout" method="get" style="margin-right: 20px;">
          <input type="submit" value="logout" />
        </form>
      </div>
    </div>
    <h1>My Bookings</h1>
    <table id="mytable" class="display" border="1" style="width: 100%;">
      <thead>
        <th>Name</th>
        <th>Number</th>
        <th>Date</th>
        <th>Departure</th>
        <th>Destination</th>
        <th>Seats</th>
        <th>Time</th>
        <th>Book</th>
      </thead>
    </table>
  </body>
</html>